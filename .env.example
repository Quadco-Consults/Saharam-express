# Saharam Express Environment Variables
# Copy this file to .env.local and fill in your values

# Aiven PostgreSQL Configuration
DATABASE_URL=postgresql://avnadmin:password@your-service.aivencloud.com:12345/defaultdb?sslmode=require
DIRECT_URL=postgresql://avnadmin:password@your-service.aivencloud.com:12345/defaultdb?sslmode=require

# JWT Secret for QR Code generation
JWT_SECRET=your-jwt-secret-key-here

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Configuration (Optional - for notifications)
SMS_API_KEY=your-sms-api-key
SMS_SENDER=SAHARAM

# Payment Gateway Configuration (Optional)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key

# Flutterwave Configuration (Optional)
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-secret-key
NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-public-key

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
NODE_ENV=production

# Database Connection (for direct database operations if needed)
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres